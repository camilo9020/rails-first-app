<%= form_for product do |f| %>
  <div>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_area :description  %>
    </div>
    <div>
      <%= f.label :price %>
      <%= f.number_field :price %>
    </div>
  </div>
  <%= f.submit %>
<% end %>

<%= link_to "Regresar", products_path  %>

